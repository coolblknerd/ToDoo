<% if user_signed_in? %>
<div class="col-md-10 col-md-offset-1">
  <% @items.each do |item| %>
  <div class="index-wrapper">
    <% if item.completed_at? %>
    <div class="row">

      <!-- Completed Items -->
      <div class="col-md-2">
        <p><%= link_to complete_item_path(item), method: :patch do %></p>
        <i class="fa fa-check fa-lg"></i>
        <% end %>
      </div>

      <div class="col-md-2">
        <p><%= link_to item, method: :delete, data: { confirm: "Are you sure?" } do %></p>
        <i class="fa fa-trash fa-lg"></i>
        <% end %>
      </div>

      <div class="col-md-8">
        <h2 class="item-title" style="opacity: 0.5;"><strike><%= link_to item.title, item %></strike></h2>
        <p class="item-sub-title item-desc" style="opacity: 0.5;"><%= item.description %></p>
        <p style="opacity: 0.5;">Completed <%= time_ago_in_words(item.completed_at) %> ago</p>
      </div>

    </div>
    <% else %>

    <!-- Incompleted Items -->
    <div class="row">

      <div class="col-md-2">
        <p><%= link_to complete_item_path(item), method: :patch do %></p>
        <i class="fa fa-check fa-lg"></i>
        <% end %>
      </div>

      <div class="col-md-8">
        <h2><%= link_to item.title, item %></h2>
        <p><%= item.description %></p>
        <p style="opacity: 0.5;">Created <%= time_ago_in_words(item.created_at) %> ago</p>
      </div>

      <div class="col-md-2">
        <p><%= link_to item, method: :delete, data: { confirm: "Are you sure?" } do %></p>
        <i class="fa fa-trash fa-lg"></i>
        <% end %>
      </div>
    </div>

    <% end %>
    <% end %>
  </div>

<% else %>
  <%= render 'welcome_page' %>
<% end %>
